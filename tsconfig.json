{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6","ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "module": "ESNext",
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@component/*": ["src/component/*"],
      "@utils/*": ["src/utils/*"],
      "@screen/*": ["src/screen/*"],
      "@styles/*": ["src/styles/*"],
      "@typed/*": ["typed/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
}
